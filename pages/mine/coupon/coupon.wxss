/* pages/mine/coupon/coupon.wxss */
.bg_black{
  display: flex;
  justify-content: center;
  margin-top: 85rpx;
  color: #6dcaaa;
}
.navbar{
  flex: none;
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #fff;
}
.navbar .item_box{
  width: 33.333%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #dcdcdc;
}
.navbar .item{
  font-size: 28rpx;
  font-weight: normal;
	font-stretch: normal;
  color: #333333;
  padding-top: 27rpx;
  box-sizing: border-box;
}
.navbar .line{
  width: 40rpx;
	height: 4rpx;
	background-color: transparent;
  margin-top: 13rpx;
}
.navbar .item.active{
  color: #6dcaaa;
  font-weight: 700;
}
.navbar .line.active{
  background-color: #6dcaaa;
  box-shadow: 0rpx 3rpx 6rpx 0rpx 
		rgba(109, 202, 170, 0.8);
	border-radius: 2rpx;
}
.swiper_box{
  margin-bottom: 120rpx;
}
.couponBox{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
/* .couponBox:last-child{
  margin-bottom: 40rpx;
} */
.coupon_item{
  width: 710rpx;
  height: 180rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #6dcaaa;
  background:url("https://www.baixl001.com/mentality/picture/010.png");
  background-size:cover;
}
.coupon_item .coupon_price{
  width: 30%;
  font-size: 37rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #6dcaaa;
}
.coupon_item .coupon_price text{
  font-size: 72rpx;
	font-weight: normal;
	letter-spacing: 0rpx;
}
.coupon_item .coupon_desc{
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #333333;
  margin-right: 37rpx;
}
.coupon_item .coupon_desc text:last-child{
  font-size: 19rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #999999;
}
.coupon_item .coupon_stats{
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.coupon_item .coupon_stats .stats{
  width: 130rpx;
	height: 40rpx;
	border-radius: 20rpx;
	border: solid 2rpx #6dcaaa;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
	color: #6dcaaa;
}
.coupon_item .coupon_stats .stats.active{
  width: 130rpx;
	height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  border-radius: 0rpx;
	color: #dedede;
  border: solid 2rpx #dedede;
  transform: rotate(-30deg);
}


.coupon_footer{
  width: 100%;
  height: 96rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #6dcaaa;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}
.goCoupon{
  width: 400rpx;
	height: 30rpx;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #6dcaaa;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goCoupon_img{
  width: 24rpx;
  height: 20rpx;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}