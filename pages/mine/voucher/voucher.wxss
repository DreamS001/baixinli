/* pages/mine/voucher/voucher.wxss */
.couponBox{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.coupon_item{
  width: 710rpx;
  height: 180rpx;
  margin-top: 20rpx;
  display: flex;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #6dcaaa;
  background:url("https://www.baixl001.com/mentality/picture/010.png");
  background-size:cover;
}
.coupon_item .coupon_price{
  width: 30%;
  font-size: 37rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #6dcaaa;
}
.coupon_item .coupon_price text{
  font-size: 72rpx;
	font-weight: normal;
	letter-spacing: 0rpx;
}
.coupon_item .coupon_desc{
  width: 40%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #333333;
  margin-right: 37rpx;
}
.coupon_item .coupon_desc text:last-child{
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #999999;
}
.coupon_item .coupon_stats{
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.coupon_item .coupon_stats .stats{
  width: 130rpx;
	height: 40rpx;
	border-radius: 20rpx;
	border: solid 2rpx #6dcaaa;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
	color: #FFF;
  background: #6dcaaa;
  box-shadow: 0rpx 6rpx 6rpx 0rpx 
		rgba(109, 202, 170, 0.3);
}