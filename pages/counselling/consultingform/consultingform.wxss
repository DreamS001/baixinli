/* pages/counselling/consultingform/consultingform.wxss */
page{
  background: #FFF;
}
.application_box{
  width: 100%;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
}
.kf_proposal {
  margin-bottom: 30rpx;
}
.kf_proposal .proposal_title{
  font-size: 30rpx;
	font-weight: 700;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #282828;
  margin-bottom: 20rpx;
}
.place-holder{
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #b2b2b2;
}
.input-text{
  width: 100%;
	height: 98rpx;
	background-color: #f9f9f9;
	border-radius: 10rpx;
  padding-left: 19rpx;
  box-sizing: border-box;
}
textarea {
  width: 100%;
}
.areas{
  height:294rpx;
  text-indent: 28rpx;
  padding-top: 30rpx;
  margin: 0 auto;
  overflow: hidden;   
  position: relative; 
  background-color: #f9f9f9;
}
.currentWordNumber{
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #cccccc;
  position: absolute;
  right: 19rpx;
  bottom: 19rpx;
}
.application_desc{
  width: 100%;
  padding: 10rpx 0 75rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.application_desc text{
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 40rpx;
	letter-spacing: 0rpx;
	color: #999999;
}
.goPay{
  width: 750rpx;
	height: 98rpx;
	background-color: #6dcaaa;
	box-shadow: 0rpx 0rpx 10rpx 0rpx 
		rgba(109, 202, 170, 0.3);
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffffff;
  border-radius: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mask_box{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  overflow: hidden;
	background-color: rgba(0,0,0,.5);
  z-index: 999;
  display: none;
}
.mask_box.show{
  display: block;
}
.mask_box .sex_box{
  width: 646rpx;
	height: 232rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.mask_box .sex_box text{
  width: 100%;
  height: 116rpx;
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
  line-height: 116rpx;
	letter-spacing: 0rpx;
	color: #333333;
  padding-left: 50rpx;
  box-sizing: border-box;
}

.picker{
  font-size: 30rpx;
  color: #333333;
  height: 98rpx;
  background: #f9f9f9;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  box-sizing: border-box;
}