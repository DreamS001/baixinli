/* pages/kf/kf.wxss */
page{
  background: #fff;
}
.kf_proposal{
  width: 100%;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
}
.kf_proposal .proposal_title{
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #282828;
  margin-bottom: 20rpx;
}

.proposal_desc{
  width: 100%;
  height: 294rpx;
}
textarea {
  width: 100%;
}
.areas{
  height:294rpx;
  text-indent: 28rpx;
  padding-top: 30rpx;
  margin: 0 auto;
  overflow: hidden;   
  position: relative; 
  background-color: #f9f9f9;
}
.currentWordNumber{
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #cccccc;
  position: absolute;
  right: 19rpx;
  bottom: 19rpx;
}
.place-holder{
  font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #b2b2b2;
}
.input-text{
  width: 100%;
	height: 98rpx;
	background-color: #f9f9f9;
	border-radius: 10rpx;
  padding-left: 19rpx;
  box-sizing: border-box;
}
.kf_btn{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
}
.kf_btn button{
  width: 624rpx;
	height: 90rpx;
	background-color: #6dcaaa;
	border-radius: 45rpx;
  font-size: 32rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0rpx;
	color: #ffffff; 
}